{
	"name": "ydh-sider-obfuscation-service",
	"version": "6.0.2",
	"description": "NodeJS Express application to obfuscate URL query parameters before sending to SIDeR eSP.",
	"main": "src/index.js",
	"repository": "git+https://github.com/Somerset-SIDeR-Programme/ydh-sider-obfuscation-service.git",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"license": "MIT",
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md && prettier CHANGELOG.md --write",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/**/*.js",
		"nodemon": "cross-env NODE_ENV=development nodemon src/index.js",
		"prettier": "prettier ** --write",
		"start": "node src/index.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-only",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
		"test-only": "cross-env NODE_ENV=test jest --detectOpenHandles --runInBand"
	},
	"jest": {
		"clearMocks": true,
		"collectCoverageFrom": [
			"src/server/**/*.js"
		],
		"testEnvironment": "node",
		"testTimeout": 10000
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"conventional-changelog-cli": "^2.0.31",
		"coveralls": "^3.1.0",
		"cross-env": "^7.0.2",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.20.2",
		"eslint-plugin-jest": "^23.8.2",
		"eslint-plugin-json": "^2.1.1",
		"jest": "^25.5.2",
		"jsinspect": "^0.12.7",
		"node-mocks-http": "^1.8.1",
		"nodemon": "^2.0.3",
		"prettier": "2.0.5",
		"supertest": "^4.0.2",
		"typescript": "^3.8.3"
	},
	"dependencies": {
		"axios": "^0.19.2",
		"express": "^4.17.1",
		"express-pino-logger": "^5.0.0",
		"file-stream-rotator": "^0.5.7",
		"helmet": "^3.22.0",
		"obfuscated-querystring": "git+https://github.com/BlackPearSw/obfuscated-querystring.git",
		"sanitize-middleware": "^2.0.5"
	}
}

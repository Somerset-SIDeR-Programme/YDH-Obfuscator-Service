{
	"name": "ydh-sider-obfuscation-service",
	"version": "4.0.0",
	"description": "NodeJS Express Service to obfuscate URL query parameters before sending to SIDeR eSP.",
	"main": "src/app.js",
	"repository": "git+https://github.com/Somerset-SIDeR-Programme/ydh-sider-obfuscation-service.git",
	"author": "Frazer Smith <frazer.smith@ydh.nhs.uk>",
	"license": "MIT",
	"scripts": {
		"changelog": "conventional-changelog -p @commitlint/config-conventional -s -i CHANGELOG.md",
		"dupe-check": "yarn jsinspect ./src",
		"lint": "eslint src/**/*.js",
		"nodemon": "cross-env NODE_ENV=development nodemon src/app.js",
		"prettier": "prettier ** --write",
		"start": "node src/app.js",
		"test": "cross-env NODE_ENV=test yarn lint && yarn test-coverage",
		"test-coverage": "cross-env NODE_ENV=test jest --coverage --verbose",
		"test-only": "cross-env NODE_ENV=test jest --verbose",
		"install-windows-service": "cross-env NODE_ENV=production winser -i -s -a -n \"SIDeR Contextual Link Obfuscation Service\"",
		"uninstall-windows-service": "winser -r -x -s -n \"SIDeR Contextual Link Obfuscation Service\""
	},
	"jest": {
		"clearMocks": true,
		"collectCoverage": true,
		"testEnvironment": "node",
		"verbose": true
	},
	"prettier": {
		"arrowParens": "always",
		"bracketSpacing": true,
		"endOfLine": "lf",
		"semi": true,
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "none",
		"useTabs": true
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^8.3.4",
		"conventional-changelog-cli": "^2.0.31",
		"coveralls": "^3.0.9",
		"eslint": "^6.8.0",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.10.0",
		"eslint-plugin-import": "^2.20.1",
		"eslint-plugin-jest": "^23.7.0",
		"eslint-plugin-json": "^2.1.0",
		"jest": "^25.1.0",
		"jsinspect": "^0.12.7",
		"node-mocks-http": "^1.8.1",
		"nodemon": "^2.0.2",
		"prettier": "1.19.1",
		"supertest": "^4.0.2",
		"typescript": "^3.7.5"
	},
	"dependencies": {
		"cross-env": "^7.0.0",
		"express": "^4.17.1",
		"express-winston": "^4.0.3",
		"helmet": "^3.21.2",
		"obfuscated-querystring": "git+https://github.com/BlackPearSw/obfuscated-querystring.git",
		"query-string": "^6.11.0",
		"request": "^2.88.2",
		"request-promise": "^4.2.5",
		"sanitize-html": "^1.21.1",
		"validator": "^12.2.0",
		"winser": "^1.0.3",
		"winston": "^3.2.1",
		"winston-daily-rotate-file": "^4.4.2",
		"xss": "^1.0.6"
	}
}
